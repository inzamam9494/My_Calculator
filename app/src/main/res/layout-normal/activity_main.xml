<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#32E8C7"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/sol_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttons_layout"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="@dimen/_30sdp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="@dimen/_60sdp" />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ADF1E8E8"
        android:padding="@dimen/_8sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_c"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:backgroundTint="#E87432"
                android:text="C"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_bracket1"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:backgroundTint="#227A6A"
                android:text="("
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_bracket2"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:backgroundTint="#227A6A"
                android:text=")"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_divide"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:backgroundTint="#227A6A"
                android:text="/"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_one"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:text="1"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_two"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:text="2"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_three"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:text="3"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_multiply"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:backgroundTint="#227A6A"
                android:text="*"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_four"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:text="4"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_five"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:text="5"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_six"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:text="6"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_subtract"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:backgroundTint="#227A6A"
                android:text="-"
                android:textSize="@dimen/_35ssp"
                app:cornerRadius="@dimen/_26sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_seven"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:text="7"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_eight"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:text="8"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_nine"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:text="9"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_add"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:backgroundTint="#227A6A"
                android:text="+"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_point"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:text="."
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_zero"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:text="0"
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_ac"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:text="ac"
                android:textSize="@dimen/_20ssp"
                app:cornerRadius="@dimen/_26sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_equal"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_57sdp"
                android:layout_margin="@dimen/_6sdp"
                android:backgroundTint="#E87432"
                android:text="="
                android:textSize="@dimen/_30ssp"
                app:cornerRadius="@dimen/_26sdp" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>

